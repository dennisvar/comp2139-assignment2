@model IEnumerable<Customer>

@{
    ViewBag.Title = "Customer Manager";
}

@if(TempData["success"] != null)
{
       <h2 style="background-color: lightblue; text-align: center;" class="p-2 rounded">@TempData["success"]</h2> 
}

<h3>Technician Manager</h3>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th>City</th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model)
        {
            <tr>
                <td>@item.FirstName @item.LastName</td>
                <td>@item.Email</td>
                <td>@item.City</td>
                <td><a class="btn btn-sm btn-primary" role="button" asp-controller="Customer" asp-action="Edit" asp-route-id="@item.CustomerId">Edit</a></td>
                <td><a class="btn btn-sm btn-primary" role="button" asp-controller="Customer" asp-action="Delete" asp-route-id="@item.CustomerId">Delete</a></td>
            </tr>
        }
    </tbody>
</table>

<a class="btn btn-sm btn-primary" role="button" asp-controller="Customer" asp-action="Add">Add Customer</a>