@model Customer
@{
    string title = ViewBag.Action + " Customer";
    ViewBag.Title = title;
}

<h3>@title</h3>
<form method="post" asp-action="Edit">
    <input hidden asp-for="CustomerId"/>
    <div>
        <div asp-validation-summary="All"></div>
        <div>
            <label asp-for="FirstName" class="form-label"></label>
            <input asp-for="FirstName" class="form-control" />
            <span asp-validation-for="FirstName" class="text-danger"></span>
        </div>
        <div>
            <label asp-for="LastName" class="form-label"></label>
            <input asp-for="LastName" class="form-control" />
            <span asp-validation-for="LastName" class="text-danger"></span>
        </div>
        <div>
            <label asp-for="Address" class="form-label"></label>
            <input asp-for="Address" class="form-control" />
            <span asp-validation-for="Address" class="text-danger"></span>
        </div>
        <div>
            <label asp-for="City" class="form-label"></label>
            <input asp-for="City" class="form-control" />
            <span asp-validation-for="City" class="text-danger"></span>
        </div>
        <div>
            <label asp-for="State" class="form-label"></label>
            <input asp-for="State" class="form-control" />
            <span asp-validation-for="State" class="text-danger"></span>
        </div>
        <div>
            <label asp-for="PostalCode" class="form-label"></label>
            <input asp-for="PostalCode" class="form-control" />
            <span asp-validation-for="PostalCode" class="text-danger"></span>
        </div>
        <div>
            <label asp-for="Country"></label>
            <select class="form-select" >
                <option selected disabled value="">Choose a country...</option>
                <option class="form-control">Canada</option>
                <option class="form-control">USA</option>
                <option class="form-control">China</option>

            </select>

        </div>
@*        <div>
            <label asp-for="Country"></label>
            <select asp-for="Country" class="form-control"
                    asp-items="@(new SelectList(ViewBag.Country, "CountryName"))">
                <option value="0"></option>
            </select>

        </div>*@
        <div>
            <label asp-for="Email"></label>
            <input asp-for="Email" class="form-control" />
            
        </div>
        <div>
            <label asp-for="Phone"></label>
            <input asp-for="Phone" class="form-control" />
            
        </div>
        <br />
        <button type="submit" class="btn btn-primary">Save</button> 
        <a asp-controller="Customer" asp-action="List" class="btn btn-primary">Cancel</a>
    </div>
</form>